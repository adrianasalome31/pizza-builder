<p id="notice"><%= notice %></p>

<br>
<h1 align="center">Crear pizza</h1>
<hr>

<div class="row">

    <div class="col">
        <% @ingredientes.each do |ingrediente| %>
            <div class="form-check">
                <%= check_box_tag(ingrediente.id, ingrediente.id, false, :onclick => "mostrarIngrediente(#{ingrediente.id.to_s+"i"});") %>
                <%= label_tag(ingrediente.id, ingrediente.nombre) %>
            </div>
            
        <% end %>
    </div>

    <div class="col base-pizza">
        <%= image_tag @pan.imagen.url %>
        <%= image_tag @salsa.imagen.url, class: "ingrediente" %>
        <% @ingredientes.each do |ingrediente| %>
            <%= image_tag ingrediente.imagen.url, class: "ingrediente ingrediente-oculto", 
            id: ingrediente.id.to_s+"i", type: "hidden" %>
        <% end %>
    </div>

    <div class="col">#por aqu√≠ va el precio</div>
</div>