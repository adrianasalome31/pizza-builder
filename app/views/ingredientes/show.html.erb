<div class="row">
    <div class="col-md-6 col-md-offset-2 mx-auto">
        <div class="card mx-auto">
            <div class="card-body bg-light">
                <h4 class="center card-title"> <%= @ingrediente.nombre %> </h4>

                <div class="row">
                    <div class="col-6">
                        <h4 class="center description"><strong>Precio: </strong></h4>
                        <p class="center">C$ <%= @ingrediente.precio %></p>
                    </div>

                    <div class="col-6">
                        <h4 class="center description"><strong>Tipo: </strong></h4>
                        <p class="center"> <%= @ingrediente.tipo.nombre %> </p>
                    </div>    
                </div>


                <p class="center"> <%= image_tag @ingrediente.imagen.url(:medium) %> </p>

                <hr>
                <div class="ingrediente-actions center">
                    <%= link_to "Editar ingrediente", edit_ingrediente_path(@ingrediente), class: "btn btn-sm btn-warning" %>
                    <%= link_to "Eliminar ingrediente", ingrediente_path(@ingrediente), method: :delete, 
                                                data: { confirm: "Â¿Seguro quieras borrar este ingrediente?" },
                                                class: "btn btn-sm btn-danger" %>
                    <%= link_to "Regresar a la lista", ingredientes_path, class: "btn btn-sm btn-primary" %>
                </div>
            </div>
        </div>
    </div>
</div>

