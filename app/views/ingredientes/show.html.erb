<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col-md-8 col-md-offset-2 mx-auto">
        <div class="card mx-auto">
            <div class="card-body bg-light">
                <h4 class="center card-title"> <%= @ingrediente.nombre %> </h4>
                <br>
                <h4 class="center description"><strong>Precio: </strong></h4>
                
