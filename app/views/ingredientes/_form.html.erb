<div class="row">
    <div class="col-md-12">
        <%= form_for(@ingrediente, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group col-md-8 offset-2">
                <%= f.label :nombre %>
                <%= f.text_field :nombre, class: "form-control", maxlength: 60, placeholder: "Nombre del ingrediente", autofocus: true %>
            </div>

            <div class="form-group col-md-8 offset-2">
                <%= f.label :precio %>
                <%= f.text_field :precio, class: "form-control", placeholder: "Ingrese el precio" %>
            </div>

            <div class="form-group col-md-8 offset-2">
                <%= f.submit class: "btn btn-primary" %>
            </div>
        <% end %>
        <div class="col-md-4 offset-4 color-match">
            [ <%= link_to "Cancelar y regresar a la lista de ingredientes", ingredientes_path %> ]
        </div>
    </div>
</div>